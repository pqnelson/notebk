%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
% We customize theorem styles...
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\theoremstyle{definition}
\newtheorem{Defn}{Definition}
\newtheorem{Thm}[Defn]{Theorem}
\newtheorem{rmk}{Remark}
\newtheorem{Lem}[Defn]{Lemma}
\newtheorem{Cor}[Defn]{Corollary}
\newtheorem{ex}{Example}
\newtheorem{nonex}[ex]{NON-Example}
\newtheorem{prop}{Proposition}
\newtheorem{sch}{Scholium}
\newtheorem{axm}{Axiom}
\newtheorem*{prob}{Problem}

\newenvironment{defn}{\begin{Defn}}{\end{Defn}}
\newenvironment{thm}{\begin{Thm}}{\end{Thm}}
\newenvironment{lem}{\begin{Lem}}{\end{Lem}}
\newenvironment{cor}{\begin{Cor}}{\end{Cor}}
