  {0.5em plus 1pt minus 1pt} % HEADSPACE
  {\thmnumber{#2\@addpunct{.}\enspace}\thmname{#1}\thmnote{\enspace\textrm{\normalfont(#3)}}}          % CUSTOM-HEAD-SPEC
\newtheoremstyle{defnstyle}
  {\thmskip}   % ABOVESPACE
