\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{danger}[2009/08/06 Danger and Double Danger Environments]
\RequirePackage{manfnt}
%%
% This macro header is what controls the ``dangerous bend''
% paragraph
%%
\newcommand{\rd}{\noindent\begingroup\hangindent=3pc\hangafter=-2\def\par{\endgraf\endgroup}\hbox to0pt{\hskip-\hangindent\dbend\hfill}\ignorespaces}

\newcommand{\rdd}{\noindent\begingroup\hangindent=4pc\hangafter=-2\def\par{\endgraf\endgroup}\hbox to0pt{\hskip-\hangindent\ddbend\hfill}\ignorespaces}

\newenvironment{danger}{\rd\begin{footnotesize}\noindent}{\end{footnotesize}\newline}

\newenvironment{ddanger}{\rdd\begin{footnotesize}}{\end{footnotesize}\newline}
